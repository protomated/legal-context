{
  "name": "legal-context",
  "version": "0.1.0",
  "description": "An open-source Model Context Protocol (MCP) server that creates a secure bridge between a law firm's Clio document management system and Claude Desktop AI assistant",
  "module": "src/server.ts",
  "main": "src/server.ts",
  "type": "module",
  "private": true,
  "license": "MPL-2.0",
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun --watch run src/server.ts",
    "setup": "bun run setup.ts",
    "check:clio": "bun run src/tools/check-clio.ts",
    "auth:simple": "bun run src/tools/simple-auth.ts",
    "test:auth": "bun run src/tests/test-auth.ts",
    "test:clio": "bun run src/tests/test-clio.ts",
    "test:extraction": "bun run src/tests/testTextExtraction.ts",
    "digest": "bunx ai-digest"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.18.2",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@xenova/transformers": "^2.17.2",
    "langchain": "^0.3.21",
    "office-text-extractor": "^3.0.3",
    "zod": "^3.24.2"
  }
}
