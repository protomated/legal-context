{
  "name": "legal-context",
  "version": "1.0.0",
  "description": "LegalContext - A secure bridge between law firms' document management systems and AI assistants",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "bun build ./src/main.ts --outfile ./dist/main.js --target node",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "bun run dist/main.js",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:debug": "bun test --inspect-wait",
    "digest": "ai-digest",
    "test:clio:auth": "bun run src/scripts/test-clio-auth.ts",
    "setup:clio:auth": "bun run src/scripts/test-clio-auth.ts"
  },
  "author": "Protomated",
  "license": "MPL-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.10",
    "@nestjs/microservices": "^11.0.13",
    "@nestjs/platform-express": "^11.0.14",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.0.13",
    "@types/express": "^5.0.1",
    "ai-digest": "^1.0.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "open": "^10.1.0",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.22",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.10",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "dotenv": "^16.4.7",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "trustedDependencies": [
    "@nestjs/cli"
  ]
}
