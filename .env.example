#---------------------------------------------
# SERVER CONFIGURATION
#---------------------------------------------
# Server port
PORT=3000

# Environment (development, production, test)
NODE_ENV=development

# Logging level (debug, info, warn, error)
LOG_LEVEL=debug

#---------------------------------------------
# MCP SERVER CONFIGURATION
#---------------------------------------------
# MCP server name and version
MCP_SERVER_NAME="LegalContext"
MCP_SERVER_VERSION=1.0.0
MCP_LICENSE=

#---------------------------------------------
# CLIO API CONFIGURATION
#---------------------------------------------
# Development Clio API credentials
CLIO_CLIENT_ID=your_development_clio_client_id
CLIO_CLIENT_SECRET=your_development_clio_client_secret
CLIO_REDIRECT_URI=http://localhost:3000/auth/callback
CLIO_API_URL=https://app.clio.com/api/v4

# Production Clio API credentials
PROD_CLIO_CLIENT_ID=your_production_clio_client_id
PROD_CLIO_CLIENT_SECRET=your_production_clio_client_secret
PROD_CLIO_REDIRECT_URI=https://your-production-domain.com/auth/callback
PROD_CLIO_API_URL=https://app.clio.com/api/v4

#---------------------------------------------
# DATABASE CONFIGURATION
#---------------------------------------------
# Development database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres_dev_password
DATABASE_NAME=legalcontext_dev

# Production database
PROD_DB_HOST=your_production_db_host
PROD_DB_PORT=5432
PROD_DB_USERNAME=postgres
PROD_DB_PASSWORD=secure_production_db_password
PROD_DB_NAME=legalcontext_prod

# Database SSL configuration (for production)
DB_SSL_ENABLED=false
DB_SSL_REJECT_UNAUTHORIZED=true

#---------------------------------------------
# SECURITY CONFIGURATION
#---------------------------------------------
# Encryption key for secure token storage (32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key_dev
PROD_ENCRYPTION_KEY=your_32_character_encryption_key_prod

# JWT settings if applicable
JWT_SECRET=your_jwt_secret_dev
JWT_EXPIRATION=1d

#---------------------------------------------
# DOCUMENT PROCESSING CONFIGURATION
#---------------------------------------------
# Document size limit in bytes (default: 5MB)
MAX_DOCUMENT_SIZE=5242880

# Chunking configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector embedding dimension (matches model used)
EMBEDDING_DIMENSION=1536

#---------------------------------------------
# RATE LIMITING & PERFORMANCE
#---------------------------------------------
# Maximum concurrent document processing jobs
MAX_CONCURRENT_PROCESSING=3

# Maximum documents allowed (free tier limit)
MAX_DOCUMENTS=100

# Maximum users allowed (free tier limit)
MAX_USERS=2

# Maximum queries per day (free tier limit)
MAX_QUERIES_PER_DAY=50

#---------------------------------------------
# MONITORING & TELEMETRY
#---------------------------------------------
# Enable/disable telemetry
TELEMETRY_ENABLED=false

# Sentry DSN for error tracking (if used)
SENTRY_DSN=

#---------------------------------------------
# CORS CONFIGURATION
#---------------------------------------------
# Allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

#---------------------------------------------
# MISC CONFIGURATION
#---------------------------------------------
# Time zone
TZ=UTC
