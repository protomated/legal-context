# LegalContext Environment Configuration

# Runtime environment (development or production)
NODE_ENV=development

# Optional HTTP server port (for future HTTP/SSE transport)
PORT=3001

# Logging level (info, debug, warn, error)
LOG_LEVEL=info

# Clio API credentials
CLIO_CLIENT_ID=your_clio_client_id
CLIO_CLIENT_SECRET=your_clio_client_secret
CLIO_REDIRECT_URI=http://localhost:3001/auth/clio/callback
CLIO_API_REGION=us  # Options: us, eu, ca, au

# LanceDB configuration
LANCEDB_DB_PATH=./lancedb

# Security
SECRET_KEY=your_secret_key_for_token_encryption

# Free tier limitations
MAX_DOCUMENTS=100
MAX_QUERIES_PER_DAY=50

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_DOCUMENT_SIZE=5242880  # 5MB
