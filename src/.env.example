# LegalContext Configuration

# Runtime environment
NODE_ENV=development
LOG_LEVEL=info

# Server configuration (optional for using stdio)
PORT=3001

# Clio API configuration
# Get these from https://app.clio.com/settings/developer_applications
CLIO_CLIENT_ID=your_clio_client_id
CLIO_CLIENT_SECRET=your_clio_client_secret
CLIO_REDIRECT_URI=http://localhost:3001/auth/clio/callback
CLIO_API_REGION=us  # Options: us, ca, eu, au

# LanceDB configuration
LANCEDB_DB_PATH=./lancedb

# Security
SECRET_KEY=your_secure_secret_key_for_encrypting_tokens

# Free tier limitations
MAX_DOCUMENTS=100
MAX_QUERIES_PER_DAY=50

# Document processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_DOCUMENT_SIZE=5242880  # 5MB in bytes
